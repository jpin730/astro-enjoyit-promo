<style is:global>
  body {
    background-color: #f1e162;
  }

  header {
    background-color: #025360;
    text-align: center;
    padding: 1rem;
  }

  header img {
    height: 100px;
  }

  main {
    padding: 1rem;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  label,
  input {
    width: 100%;
    box-sizing: border-box;
    max-width: 300px;
  }
</style>

<script>
  const form = document.querySelector('form') as HTMLFormElement
  const message = document.querySelector('#message') as HTMLDialogElement
  const monthPicker = form.querySelector(
    'input[type="month"]',
  ) as HTMLInputElement
  const submitButton = form.querySelector(
    'button[type="submit"]',
  ) as HTMLButtonElement

  const todayMonth = new Date().toISOString().slice(0, 7)
  monthPicker.value = todayMonth
  monthPicker.min = todayMonth

  form.addEventListener('submit', (event) => {
    event.preventDefault()

    submitButton.disabled = true

    const formData = new FormData(form)
    const data = Object.fromEntries(formData.entries())

    fetch('/api/send', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    })
      .then(() => {
        ;(message.querySelector('p') as HTMLParagraphElement).textContent =
          'Cotización enviada'
        message.showModal()
        form.reset()
        const todayMonth = new Date().toISOString().slice(0, 7)
        monthPicker.value = todayMonth
        monthPicker.min = todayMonth
      })
      .catch(() => {
        ;(message.querySelector('p') as HTMLParagraphElement).textContent =
          'Error al enviar la cotización'
        message.showModal()
      })
      .finally(() => {
        submitButton.disabled = false
      })
  })
</script>
